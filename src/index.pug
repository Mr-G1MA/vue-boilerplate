extends ./main.layout.pug 

block content 
  .main-section 
    section.hero
      .container.hero__container 
        header.header 
          a.logo(href="#") GB
          nav.menu.header-menu 
            - var menuItems = ["About me", "Skills", "Projects", "Reviews"];
            ul.menu__list   
              each item in menuItems
                li.menu__item 
                  a(href="#").menu__link #{item}

          - var socials = ['insta', 'vk', 'github', 'envelope'];
          ul.socials.header-socials
            each item in socials 
              li.socials__item 
                a(href="#").socials__link
                  +icon(item, "socials__icon")
          #hamburger-component
            
        .userinfo
          .userinfo__title Personal site
          .userinfo__name Bulat Gimadiev 

        .hero__bottom-buttons
          button.scroll-down-btn Scroll
    section.about
      .container.about__container
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image("content/user.png", "user__avatar-img")
            -
              var userTable = [
                ["Living:", "Kazan city"],
                ["Age:", "20 y.o."],
                ["Born:", "3-rd september 2000"],
              ];
            
            table.user__table
              each item in userTable
                tr.user__table-row
                  td.user__table-title #{item[0]}
                  td.user__table-desc #{item[1]}
        .about__desc
          .about__title Hello, my name is
          .about__name Bulat Gimadiev
          .about__text I am developing modern websites and applications. I like doing interesting and modern projects.
          .about__ps I made this site as part of my studies at the LoftSchool. I'll refresh my content in it a bit later. Until then, look how cool and beautiful everything is here!
  .middle-section
    section.skills
      .container.skills__container
        .skills__title 
          .skills__title-container
            .skills__title-name My skills
            .skills__title-desc 
              p I made this site as part of my studies at the LoftSchool. I'll refresh my content in it a bit later. Until then, look how cool and beautiful everything is here!
        .skills__graphs
          .skills__graphs-container
            #skills-component
  section.projects
    .container.projects__container
      .section-title.projects__title My projects
      .projects__content
        #projects-component
  section.reviews
    .container.reviews__container
      #reviews-slider-component
  footer.footer
    .container.footer__container
      .footer__copyright
        .footer__copyright-year
          .footer__copyright-year--text © 2020
        .footer__copyright-userinfo
          .footer__copyright-name Bulat Gimadiev
          .footer__copyright-text Personal Site
      .footer__content-wrapper
        .footer__content
          nav.menu.footer__menu
            ul.menu__list.footer__list
              each item in menuItems 
                li.menu__item.footer__menu-item
                  a(href="#").menu__link #{item}
          .footer__content-text
            p I made this site as part of my studies at the LoftSchool.
          .footer__content-socials
            ul.socials.footer__socials
              each item in socials 
                li.socials__item.footer__socials-item
                  a(href="#").socials__link.footer__socials-link
                    +icon(item, "footer__socials-icon")
        .footer__ps
          .footer__ps-text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
          .footer__ps-author Martin Golding