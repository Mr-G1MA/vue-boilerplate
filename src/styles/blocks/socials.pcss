.socials{
  display: flex;
}

.socials__icon{
  width: 25px;
  fill: rgba(255, 255, 255, 0.3);

  &:hover{
    fill: rgba(255, 255, 255, 0.8);
    transition: 0.3s;
  }
}

.socials__item{
  margin-right: 35px;

  &:last-child{
    margin-right: 0;
  }
}


.footer__socials-link{
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  width:50px;
  height: 50px;
  align-items: center;

  &:hover{
    border-color: white;
    transition: 0.3s;
    & .footer__socials-icon{
      fill: rgba(255, 255, 255, 0.8);
      transition: 0.3s;
    }
  }

  @include tablets{
    width: 60px;
    height: 60px;
  }
}

.footer__socials-icon{
  width: 21px;
  fill: rgba(255, 255, 255, 0.3);

  @include tablets{
    width: 26px;
  }
}

.footer__socials-item{
  margin-right: 19px;

  &:last-child{
    margin-right: 0;
  }
}

.header-socials{
  @include tablets{
    margin-left: 25%;
  }

  @include phones{
    display:none;
  }
}