.tags{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15px;

  @include tablets{
    justify-content: center;
  }

  @include phones{
    justify-content: flex-start;
  }
}

.tags__item{
  margin-right: 15px;
  margin-bottom: 15px;
  padding: 13px 21px;
  background: #f1f5f9;
  font-size: 15px;
  font-weight: 600;
  color: rgba(51, 60, 73, 0.8);
  border-radius: 50px;

  @include desktop{
    margin-right: 8px;
  }
}