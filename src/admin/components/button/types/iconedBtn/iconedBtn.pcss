.button-component {
  color: $links-color;
  font-weight: 600;
  display: flex;
  align-items: center;
  padding: 0;
  background: transparent;
  outline: none;

  &:focus {
    outline: 1px dotted grey; 
  }

  &:before {
    content: "+";
    display: block;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-image: linear-gradient(to right, #006aed, #3f35cb);
    line-height: 23px;
    color: #fff;
    margin-right: 13px;
    flex-shrink: 0;
    flex-basis: 24px;
  }
}