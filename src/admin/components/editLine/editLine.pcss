.edit-line-component {
  &.blocked {
    opacity: 0.5;
    filter: grayscale(100%);
    pointer-events: none;
  }
  color: #414C63;
  font-size: 18px;
  font-weight: 600;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input {
  width: 60%;
}

.buttons {
  display: flex;
}

.button-icon {
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}