script(type="text/x-template")#reviews-slider
  .reviews__slider
    .reviews__slider-header
      .section-title.reviews__title Что обо мне говорят
      .reviews__slider-btns
        button(
          @click="slide('prev')"
          :class="{allowBtn : activeBtn==2||activeBtn==0}"
        ).reviews__slider-btn.reviews__slider-btn--prev
        button(
          @click="slide('next')"
          :class="{allowBtn : activeBtn==1||activeBtn==0}"
        ).reviews__slider-btn.reviews__slider-btn--next
    swiper(ref="slider" :options="sliderOptions" v-show="resizeable" @reachBeginning="changeParamPrev" @slideChange="change" @reachEnd="changeParamNext").reviews__slider-list
      swiper-slide.reviews__slider-item(v-for="item in reviews" :key="item.id")
        .review 
          .review__text
            p {{item.text}}
          .review__user
            .user-display
              .user-display__avatar
                .user-display__avatar-style
                  img(:src="`https://webdev-api.loftschool.com/${item.photo}`").user__avatar-img
              .user-display__desc
                .user-display__name {{item.author}}
                .user-display__pos {{item.occ}}
    swiper(ref="otherSlider" :options="otherSliderOptions" v-show="!resizeable" @reachBeginning="changeParamPrev" @slideChange="change" @reachEnd="changeParamNext").reviews__slider-list
      swiper-slide.reviews__slider-item(v-for="item in reviews" :key="item.id")
        .review 
          .review__text
            p {{item.text}}
          .review__user
            .user-display
              .user-display__avatar
                .user-display__avatar-style
                  img(:src="`https://webdev-api.loftschool.com/${item.photo}`").user__avatar-img
              .user-display__desc
                .user-display__name {{item.author}}
                .user-display__pos {{item.occ}}